@model IEnumerable<Koolitusede.Models.Opetaja>

@{
    ViewBag.Title = "Opetaja";
}

<h2>Opetaja</h2>

<p>
    @Html.ActionLink("Lisa Uus", "CreateOpetaja", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OpetajaEesnimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpetajaPerenimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OpetajaEesnimi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpetajaPerenimi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.ActionLink("Muutma", "EditOpetaja", new { id=item.Id }) |
            @Html.ActionLink("Kustutama", "DeleteOpetaja", new { id=item.Id })
        </td>
    </tr>
}

</table>
